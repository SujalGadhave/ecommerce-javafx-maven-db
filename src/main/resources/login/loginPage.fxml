<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="360.0" prefWidth="520.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LoginController">
   <children>
      <Label layoutX="190.0" layoutY="40.0" text="Welcome Back" textAlignment="CENTER" textFill="#1E3A5F" underline="true">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="140.0" layoutY="120.0" text="Username" textFill="#1E3A5F">
         <font>
            <Font name="Arial" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="userName" layoutX="240.0" layoutY="120.0" prefWidth="200.0" style="-fx-border-color: #1E3A5F; -fx-border-radius: 5; -fx-background-radius: 5;" />
      <Label layoutX="141.0" layoutY="180.0" text="Password" textFill="#1E3A5F">
         <font>
            <Font name="Arial" size="16.0" />
         </font>
      </Label>
      <PasswordField fx:id="password" layoutX="240.0" layoutY="180.0" prefHeight="26.0" prefWidth="200.0" style="-fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: #1E3A5F;" />
      <Button layoutX="240.0" layoutY="240.0" mnemonicParsing="false" onAction="#loginButtonClick" prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #1E3A5F; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" text="Login">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
      <Label fx:id="errorMessage" layoutX="240.0" layoutY="281.0" prefHeight="18.0" prefWidth="200.0" text="" />
   </children>
</AnchorPane>
